                android:layout_width="155dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/sbH1"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:max="360"
                    android:progress="1" />

                <TextView
                    android:id="@+id/hue1"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="TextView" />

                <SeekBar
                    android:id="@+id/sbS1"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:max="360"
                    android:progress="1" />

                <TextView
                    android:id="@+id/sat1"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="TextView" />

                <SeekBar
                    android:id="@+id/sbB1"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:max="360"
                    android:progress="1" />

                <TextView
                    android:id="@+id/bri1"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAMP 1: ON" />


            </LinearLayout>
        </RelativeLayout>

